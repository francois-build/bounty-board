{
  "name": "bounty-board-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:functions": "npm run build --workspace=functions",
    "dev:core": "npm run dev --workspace=@bounty-board/core",
    "dev:link": "npm run dev --workspace=@bounty-board/link",
    "dev:www": "npm run dev --workspace=@bounty-board/www",
    "dev:admin": "npm run dev --workspace=@bounty-board/admin",
    "emulators": "firebase emulators:start --import=./firebase-export --export-on-exit",
    "dev": "concurrently \"npm run emulators\" \"npm run dev --workspaces --if-present\" --names \"FIREBASE,APPS\" --kill-others",
    "build": "npm run build --workspaces",
    "deploy": "firebase deploy"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "functions"
  ],
  "dependencies": {
    "firebase-admin": "^12.1.1",
    "firebase-functions": "^5.0.1",
    "react-hot-toast": "^2.4.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
