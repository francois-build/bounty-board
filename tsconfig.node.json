{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "types": ["node"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
