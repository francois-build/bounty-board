rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // RBAC: Authenticated users can only write to their own data.
    function isOwner(doc) {
      return request.auth.uid == doc.ownerId;
    }

    // Helper for Admin Role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read;
      allow write: if isOwner(resource.data);

      // IMMUTABILITY: gmv_total is server-managed.
      allow update: if !('gmv_total' in request.resource.data);
    }

    match /challenges/{challengeId} {
      // STEALTH MODE: Allow reads only by owner or admin if stealth is on.
      allow read: if !resource.data.is_stealth || isOwner(resource.data) || isAdmin();
      allow write: if isOwner(resource.data);
    }

    match /submissions/{submissionId} {
      allow read, write: if isOwner(resource.data) || isAdmin();
    }
  }
}